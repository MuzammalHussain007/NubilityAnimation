<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/custom_relative_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you Want to continue"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/custom_textview_alert"/>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_below="@+id/custom_textview_alert"
       android:padding="5dp"
       android:layout_centerHorizontal="true"
       android:weightSum="0">
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Yes"
           android:id="@+id/custom_alert_yes"
           android:textAllCaps="false"
           />
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="No"
           android:id="@+id/custom_alert_no"
           android:textAllCaps="false"
           />

   </LinearLayout>




</RelativeLayout>
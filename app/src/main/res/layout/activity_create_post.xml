<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/claywhite"
    tools:context=".FanArt.CreatePostActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_post_action_button"
        android:layout_alignParentRight="true"
        android:src="@drawable/add"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#FFC107"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="invisible"
        android:backgroundTint="@color/colorwhite"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:hint="Enter Text For Post"
        android:textColorHint="@color/colorBlack"
        android:textColor="@color/colorBlack"
        android:id="@+id/user_post_edit_text"
        android:paddingLeft="30dp"
        android:background="@drawable/round_shape"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="257dp"
        android:src="@drawable/user"
        android:scaleType="fitXY"
        android:id="@+id/user_post_image_view"
        android:layout_below="@+id/user_post_edit_text"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorwhite"
        android:layout_below="@+id/user_post_image_view"
        android:id="@+id/usre_action_butn"
        android:textAllCaps="false"
        android:text="Post"
        android:textSize="15dp"/>



</RelativeLayout>
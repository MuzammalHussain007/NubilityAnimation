<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:id="@+id/groupMessage"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/claywhite"
        tools:context=".Chat.GroupMessageActivity">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="490dp"
            android:layout_alignParentStart="true"
            android:id="@+id/message_recyclarView"
            android:layout_alignParentLeft="true" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:padding="3dp"
                    android:hint="Enter Your Message"
                    android:textColorHint="@color/colorlorgrey"
                    android:paddingLeft="20dp"
                    android:background="@drawable/background_round"
                    android:id="@+id/user_messagae"
                    />
                <ImageButton
                    android:layout_width="40dp"
                    android:scaleType="fitXY"
                    android:layout_height="40dp"
                    android:id="@+id/sender_image_button"
                    android:src="@drawable/send_message_icon"
                    android:background="@drawable/background_round"
                    android:layout_alignParentRight="true"/>
            </LinearLayout>


        </RelativeLayout>



    </RelativeLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorwhite">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:src="@drawable/user"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            android:id="@+id/custom_user_product_image"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="88dp"
            android:layout_marginTop="5dp"
            android:id="@+id/custom_user_product_name"
            android:text="Product Name"
            android:paddingLeft="5dp"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="88dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:layout_below="@+id/custom_user_product_name"
            android:text="Product Price"
            android:id="@+id/custom_user_product_price"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:text="0"
            android:id="@+id/custom_product_quantity"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="63dp"
            android:layout_marginLeft="125dp"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/custom_product_increment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="85dp"
            android:scaleType="fitXY"
            android:src="@drawable/add_increase_item" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/decrease_purchase"
            android:layout_marginTop="55dp"
            android:id="@+id/custom_product_decrement"
            android:layout_marginLeft="170dp"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>
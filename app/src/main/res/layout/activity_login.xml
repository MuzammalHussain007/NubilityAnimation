<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/grandient_layout"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="30dp"
    tools:context=".Registration.LoginActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Email"
           android:textColor="@color/colorwhite"
           android:textSize="20dp"
           android:id="@+id/email_login_textView"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorwhite"

            android:paddingLeft="20dp"
            android:textColorHint="#C2185B"
            android:layout_below="@+id/email_login_textView"
            android:layout_marginTop="10dp"
            android:inputType="textWebEmailAddress"
            android:background="@drawable/round_shape"
            android:id="@+id/email_login_EditText"
            android:hint="Enter Email Address Here"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="20dp"
            android:textColor="@color/colorwhite"
            android:layout_below="@+id/email_login_EditText"
            android:layout_marginTop="10dp"
            android:id="@+id/password_login_textView"/>
        <EditText
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:textColorHint="#C2185B"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:backgroundTint="@color/colorwhite"
            android:layout_below="@+id/password_login_textView"
            android:layout_marginTop="10dp"
            android:id="@+id/password_login_EditText"
            android:hint="Enter Password Here"
            android:background="@drawable/round_shape"
            />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorwhite"
                android:textSize="19dp"
                android:layout_below="@+id/password_login_EditText"
                android:layout_marginTop="15dp"
                android:textColorHint="@color/colorwhite"
                android:text="Login"
                android:id="@+id/login_button"
                android:textAllCaps="false"
                android:background="@drawable/button_gradient"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Socail Links"
            android:layout_marginTop="80dp"
            android:layout_below="@+id/login_button"
            android:textColorHint="@color/colorwhite"
            android:textColor="@color/colorwhite"
            android:id="@+id/login_socail_link"
            android:layout_centerInParent="true"
            android:textSize="17dp"/>
        <com.facebook.login.widget.LoginButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="10dp"
            android:id="@+id/login_socails_links"
            android:layout_centerInParent="true"
            android:layout_below="@+id/login_socail_link"
            android:layout_marginTop="10dp"

            android:background="@drawable/round_shape"
            />
        <TextView
            android:onClick="setForget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Password"
            android:textSize="15dp"
            android:textColor="@color/colorwhite"
            android:layout_below="@+id/password_login_textView"
            android:layout_marginTop="120dp"
            android:id="@+id/login_forget_password"
            android:layout_marginLeft="200dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorwhite"
            android:layout_below="@+id/login_socails_links"
            android:layout_marginTop="10dp"
            android:text="Do'nt Have Account SignUp Here"
            android:textSize="20dp"
            android:onClick="shift"/>





    </RelativeLayout>




</ScrollView>